{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["esnext", "dom"],
    "strict": true,
    "sourceRoot": "./src",
    "rootDir": "./src",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "types": ["@types/jest"]
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.mock.ts"
  ]
}
